{{#if showAnswer}}
<form>
  <div class='form-group'>
    <label>Name:</label>
    {{input value=userName class='form-control'}}
  </div>
  <div class='form-group'>
    <label>Answer:</label>
    {{input value=answer class='form-control'}}
  </div>
  <button {{action 'saveAnswer'}}>Save</button>
</form>
{{else}}
<button {{action 'showAnswerForm'}}>Answer</button>
{{/if}}
